    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">



    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
